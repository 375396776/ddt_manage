package com.ddt.manage.util;

import java.util.Date;
import java.text.*;

public class DateUtil {
	private static final SimpleDateFormat yyyy_MM_dd__HH_mm_ss = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
	private static final SimpleDateFormat yyyyMMdd = new SimpleDateFormat("yyyyMMdd");
	public static String Formmat_yyyy_MM_dd__HH_mm_ss(Date date) {
		return yyyy_MM_dd__HH_mm_ss.format(date);
	}
	public static String Formmat_yyyyMMdd(Date date) {
		
		return yyyyMMdd.format(date);
	}
}
